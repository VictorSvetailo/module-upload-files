{
   "parser": "@babel/eslint-parser",
   "parserOptions": {
      "sourceType": "module",
      "requireConfigFile": false
   },
   "plugins": ["import"],
   "rules": {
      "prefer-const": "error",
      "no-console": ["warn", { "allow": ["warn", "error"] }],
      "indent": ["warn", 3, { "SwitchCase": 1 }],
      "max-len": ["error", { "code": 120 }],
      "comma-dangle": ["warn", "never"],
      "semi": ["error", "never"],
      "import/order": [
         "error",
         {
            "groups": [
               "builtin",
               "external",
               "internal",
               "parent",
               "sibling",
               "index",
               "object",
               "type"
            ],
            "newlines-between": "always-and-inside-groups"
         }
      ]
   }
}



